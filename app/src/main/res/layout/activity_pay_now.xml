<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".PayNow">

    <!-- Billing Information Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="billing_information"
        android:textAlignment="center"
        android:textColor="#1953E7"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Order Details Section -->
    <TextView
        android:id="@+id/tvOrderDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="65dp"
        android:text="order_details"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvColorPages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:padding="4dp"
        android:text="color_pages_0"
        android:textColor="#333333"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvBWPages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:padding="4dp"
        android:text="b_w_pages_0"
        android:textColor="#333333"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvBinding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:padding="4dp"
        android:text="binding_no"
        android:textColor="#333333"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvTotalAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:padding="6dp"
        android:text="total_amount_0_00"
        android:textColor="#1953E7"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- UPI Payment Button -->
    <Button
        android:id="@+id/upiPaymentButton"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:backgroundTint="#1953E7"
        android:text="pay_now"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</LinearLayout>


